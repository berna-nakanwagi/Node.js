doctype html
html
  head
    title Furniture List
    link(rel="stylesheet",  href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous")
    link(rel="stylesheet", href="/css/table.css")
  body
    h1 Furniture List

    table(border="1" cellspacing="0" cellpadding="8")
      thead
        tr
          th Name
          th Type
          th Price
          th Description
          th Image
          th Update 
          th Delete
      tbody
        if furnitureStock.length > 0
          each item in furnitureStock
            tr
              td #{item.name}
              td #{item.type}
              td #{item.price}
              td #{item.description}
              td 
                img(src="/" + item.furnitureImage alt="furniture image" width="150px" height="150px")
              td 
                a.btn.btn-primary.btn-block(href=`/furniture/${item._id}`) Update
              td 
                form(action="/deletefurniture" method="post")
                  input(type="hidden" name="id" value=item._id)
                  button.btn.btn-danger.btn-block(type="submit") Delete 

    