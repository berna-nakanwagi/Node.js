doctype html
head
  style.
    table {
    font-family: arial, sans-serif;
    border-collapse: collapse;
    width: 100%;
    }
    td, th {
    border: 1px solid #cea990ff;
    text-align: left;
    padding: 8px;
    }
    tr:nth-child(even) {
    background-color: #e0b67fff;
    }
h2 Our users
table
  tr
    th Username
    th Email
    th Password
    th Role

     if users.length > 0
  each user in users
    tr
      td #{user.username}
      td #{user.email}
      td #{user.password}
      td #{user.role}

  