doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title MWF — Record Sale
    link(rel="stylesheet", href="/css/sales.css")

  body
    .container
      h1 Mayondo Wood Furniture — Record Sale
      p.lead Record a new customer sale

      form(action="/" method="")
        .form-row
          label(for="customerName") Customer name
          input#customerName(type="text" name="customerName" required placeholder="Company or contact name")

        .form-row
          label(for="productType") Product type
          select#productType(name="productType" required)
            option(value="") -- select --
            option(value="Timber") Timber
            option(value="Pole") Pole
            option(value="Furniture") Furniture
            option(value="Other") Other

        .form-row
          label(for="productName") Product name / model
          input#productName(type="text" name="productName" required placeholder="e.g. Teak plank, Office Desk")

        .form-row.inline
          label(for="quantity") Quantity
          input#quantity(type="number" name="quantity" min="1" value="1" required)

          label(for="unitPrice") Unit price (UGX)
          input#unitPrice(type="number" name="unitPrice" min="0" step="0.01" value="0" required)

        .form-row
          label(for="date") Date
          input#date(type="date" name="date" required)

        .form-row
          label(for="paymentType") Payment type
          select#paymentType(name="paymentType" required)
            option(value="cash") Cash
            option(value="cheque") Cheque
            option(value="bank") Bank overdraft

        .form-row
          label(for="salesAgent") Sales agent
          input#salesAgent(type="text" name="salesAgent" placeholder="Agent name" required)

        .form-row
          input#transport(type="checkbox" name="transport")
          label(for="transport") Provide transport (adds 5% of total)

        .form-row
          button(type="submit") Record Sale

      //- RECEIPT PLACEHOLDER
      section.receipt
        h2 Receipt Preview (after submission)
        p Receipt will include customer name, product details, date, total, and payment type.